  <thead>
    <th>Juego</th>
    <th>Resultado</th>
    <th>Detalles</th>
  </thead>
  <tbody>
    <% @bets.each do |round, bets| %>
      <tr>
        <td><%= "Juego NÂº#{round}" %></td>
        <td><%= I18n.t bets.first.round.color %></td>
        <td>
          <table>
            <tbody>
              <% bets.each do |bet| %>
                <th><%= bet.user.to_s %></th>
